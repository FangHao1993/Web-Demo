<%- include("html_head") %>


<div class="container">
<% if(locals.flashMsg){ %>
    <div class="alert alert-danger" role="alert" style="margin-top: 20px;">
        <%= flashMsg%>
    </div>
<% } %>


    <form action="/login-check" method="post" style="margin-top: 20px;">
        <div class="form-group">
            <label for="user">Account</label>
            <input type="text" class="form-control" id="account" name="account" placeholder="Account">
            <small id="emailHelp" class="form-text text-muted"></small>
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" class="form-control" id="password" name="password" placeholder="Password">
        </div>
        <button type="submit" class="btn btn-primary">Login</button>
        <button type="button" class="btn btn-primary" onclick="location.href='/dong-form'">Register</button>
    </form>
</div>

<%- include("scripts") %>
<%- include("html_foot") %>